<!DOCTYPE html>
<html lang="es">
<head>
    <title>Gestionar Usuarios</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel='stylesheet' href='/stylesheets/admin.css'/> 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <%- include("../header") %>

    <!-- Lista de Tipos de Instalaciones --> 
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="cnt-cuadro">
                    <div class="cnt-admin"><h2>Gestionar Tipos de Instalaciones</h2></div>
                    
                    <!-- Lista de tipos de instalacion -->
                    <table class="table">
                        <thead>
                            <tr>
                                 <!-- <th>Imagen</th> -->
                                <th>Nombre</th>
                                <th>Descipción</th>
                                <th>Hora de Apertura</th>
                                <th>Hora de Cierre</th>
                                <th>Aforo</th>
                                <th>Colectivo</th>
                            </tr>
                        </thead>
                        <tbody id="tipo-instalacion-list">
                            <p></p>
                        </tbody>
                    </table>
                    <!-- Lista de Instalaciones -->

                    <div class="cnt-admin"><h2>Gestionar Instalaciones</h2></div>

                    <table class="lista-instalaciones" id="lista-instalaciones">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Tipo</th>
                                <th>Facultad</th>
                                <th id="checkbox" style="display: none;">Seleccionar</th>      
                            </tr>
                        </thead>
                        <tbody id="instalaciones-list">
                            <p></p>
                        </tbody>

                    </table>
                    <!-- Botón de crea instalacio-->
                    <tr>
                        <!-- Botón de crea instalacion-->
    <tr>
        <td colspan="3">
            <button class="btn btn-primary" onclick="botonCrearInstalacion()">Crear Instalación</button>
        </td>
    </tr>
    <tr>
        <td colspan="3">
            <button class="btn btn-danger" onclick="botonEliminarInstalacion()">Eliminar Instalación</button>
        </td>
    </tr>
    <tr>
        <td colspan="3">
            <button class="btn btn-primary" onclick="botonEditarInstalacion()">Editar Instalación</button>
        </td>
    </tr>

    <!-- Ventana modal -->
    <div id="crear-instalacion-modal" class="modal" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Crear Instalación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form >
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" required>
                        </div>
                        <div class="mb-3">
                            <label for="tipo" class="form-label">Tipo</label>
                            <select class="form-control" id="tipo" name="tipo" required>
                                <option value="" disabled selected>Selecciona un tipo de Instalacion</option>          
                                <option value=" "></option>
                                
                            </select>
                        </div>
                        <div class="mb-3" id="facultadCampo">
                            <label for="facultades">Facultad:</label>
                            <select class="form-control" id="facultad" name="facultad" required>
                                <option value="" disabled selected>Selecciona una facultad</option>
                                <option value="Informática">Informática</option>
                                <option value="Biología">Biología</option>
                                <option value="Información">Información</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary" onclick="crearInstalacion()">Crear</button>
                    </form>


               
                </div>
            </div>
        </div>
    </div>

    
    

    <%- include("../footer") %>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>


    <script>
        $(document).ready(function() {
            $.ajax({
                url: '/admin/obtener_tipos_instalacion',
                type: 'GET',
                success: function(data) {
                    $('#tipo').empty();
                    data.forEach(function(tipos_inst) {

                        $('#tipo').append(`<option value="${tipos_inst.tipo}">${tipos_inst.tipo}</option>`);

                        var row = '<tr>' +
                            '<td>' + tipos_inst.tipo + '</td>' +
                            '<td>' + tipos_inst.descripcion + '</td>' +
                            '<td>' + tipos_inst.hora_de_apertura + '</td>' +
                            '<td>' + tipos_inst.hora_de_cierre + '</td>' +
                            '<td>' + tipos_inst.aforo + '</td>' +
                            '<td>' + (tipos_inst.colectivo ? 'Si' : 'No') + '</td>' +
                            '</tr>';
                        $('#tipo-instalacion-list').append(row);
                    });
                },
                error: function(error) {
                    console.log(error);
                }
            });
        });

        $(document).ready(function() {
            $.ajax({
                url: '/admin/obtener_instalaciones',
                type: 'GET',
                success: function(data) {
                    data.forEach(function(instalaciones) {
                        var row = '<tr>' +
                            '<td>' + instalaciones.nombre + '</td>' +
                            '<td>' + instalaciones.tipo + '</td>' +
                            '<td>' + instalaciones.facultad + '</td>' +      
                            '<td>' + '<input type="checkbox" id="check" name="check" value="check" style="display: none;">' + '</td>' +
                            '</tr>';
                        $('#instalaciones-list').append(row);
                    });
                },
                error: function(error) {
                    console.log(error);
                }
            });
        });

    //Botón de crear instalación
    function botonCrearInstalacion() {
        $('#crear-instalacion-modal').modal('show');
    }
    

    //Botón de crear instalación
    function crearInstalacion() {  
        console.log('Crear instalación');
        console.log($('#nombre').val());
        console.log($('#tipo').val());
        console.log($('#facultad').val());
        $.ajax({
            url: '/admin/crear_instalacion',
            type: 'POST',
            data: {
                nombre: $('#nombre').val(),
                tipo: $('#tipo').val(),
                facultad: $('#facultad').val()
            },
            
            success: function(response) {
                alert("Instalación creada")
                console.log('Instalación creada');
                location.reload();
            },
            error: function(error) {
                alert("Error al crear la instalación")
                console.log(error);
            }
        });
    }

    function botonEliminarInstalacion(){
        //mostrar una coluumno oculta con los checkbox en cada instalacion de la lista instalaciones
        $('#checkbox').toggle();
        //acceder a la cuarta columna de la lista instalaciones
        $('#instalaciones-list').prop('selectedIndex', 3).toggle();
        
    }

    </script>

</body>
</html>
