<!-- views/admin/users.ejs -->

<!DOCTYPE html>
<html lang="es">
<head>
    <title>Gestionar Usuarios</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel='stylesheet' href='/stylesheets/admin.css'/> <!-- Puedes crear un archivo CSS específico para la vista del administrador -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <%- include("header") %>
    
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="cnt-cuadro">
                    <div class="cnt-admin"><h2>Gestionar Usuarios</h2></div>
                    
                    <!-- Lista de usuarios -->
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Primer Apellido</th>
                                <th>Segundo Nombre</th>
                                <th>Correo</th>
                                <th>Admin</th>
                                <th>Validado</th>
                                <th>Validar</th>
                                <th>Expulsar</th>
                            </tr>
                        </thead>
                        <tbody id="user-list">
                            <p></p>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <%- include("footer") %>

    <script>
        $(document).ready(function() {
            $.ajax({
                url: '/users',
                type: 'GET',
                success: function(data) {
                    data.forEach(function(user) {
                        if (user.admin == 1) {
                            user.admin = "Si";
                        } else {
                            user.admin = "No";
                        }
                        var validationButton = user.validado
                        ? '<button class="btn btn-danger" onclick="toggleValidation(\'' + user.correo + '\', true)"><i class="bi bi-x"></i> Desvalidar</button>'
                        : '<button class="btn btn-success" onclick="toggleValidation(\'' + user.correo + '\', false)"><i class="bi bi-check"></i> Validar</button>';
                        var invalidateButton = '<button class="btn btn-warning" onclick="invalidateUser(\'' + user.correo + '\')"><i class="bi bi-x"></i> Desvalidar</button>';

                        
                        var row = '<tr>' +
                            '<td>' + user.nombre + '</td>' +
                            '<td>' + user.apellido1 + '</td>' +
                            '<td>' + user.apellido2 + '</td>' +
                            '<td>' + user.correo + '</td>' +
                            '<td>' + user.admin + '</td>' +
                            '<td>' + (user.validado ? 'SI' : 'NO') + '</td>' +
                            '<td>' +  validationButton + '</td>' +
                            '<td><button class="btn btn-danger" onclick="expelUser(\'' + user.correo + '\')"><i class="bi bi-x"></i> Expulsar</button></td>' +
                            '</tr>';
                        $('#user-list').append(row);
                    });
                },
                error: function(error) {
                    console.log(error);
                }
            });
        });
    
        // Función para expulsión de usuarios
        function expelUser(correoUsuario) {
            console.log('Expulsar usuario: ' + correoUsuario);
            $.ajax({
                url: '/expel-users/' + correoUsuario,
                type: 'POST',
                success: function(data) {
                    console.log('Expulsao');
                    location.reload();
                },
                error: function(error) {
                    console.log(error);
                }
            });
        }


        // Llamada AJAX para desvalidar usuarios
        function invalidateUser(correoUsuario) {
            console.log('Desvalidar usuario: ' + correoUsuario);
            // Llamada AJAX para desvalidar al usuario
            $.ajax({
                url: '/invalidate-users/' + correoUsuario, 
                type: 'POST',
                success: function(data) {
                    console.log('Usuario desvalidado');
                    location.reload();
                },
                error: function(error) {
                    console.log(error);
                }
            });
        }
    
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    
</body>
</html>
